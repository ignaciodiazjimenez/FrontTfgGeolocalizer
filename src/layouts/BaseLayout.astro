---
import "../styles/global.css";
import Sidebar from "../components/Sidebar.jsx";

/* `showSidebar` será true por defecto.
   En páginas públicas (login, registro) lo pasaremos a false. */
const { children, showSidebar = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Geolocalizer</title>
  </head>

  <body class="font-sans min-h-screen bg-gradient-to-b from-primary-light to-primary-dark text-accent-dark antialiased">
    {showSidebar && <Sidebar />}

    <!-- Contenido principal -->
    <main class="min-h-screen flex flex-col items-center justify-center
                 {showSidebar ? 'ml-52' : ''} py-20">
      <slot />
    </main>
  </body>
</html>
