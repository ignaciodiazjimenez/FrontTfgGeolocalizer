---
import BaseLayout from "../layouts/BaseLayout.astro";
import Boton      from "../components/Boton.jsx";
import CheckSession from "../components/CheckSession";

// En la página principal no queremos ni Sidebar ni Header,
// pero sí Greeting y Footer:
const showSidebar  = false;
const showHeader   = false;
const showGreeting = true;
const showFooter   = true;
---

<BaseLayout
  showSidebar={showSidebar}
  showHeader={showHeader}
  showGreeting={showGreeting}
  showFooter={showFooter}
>
  <CheckSession client:load />
  <section class="text-center max-w-3xl mx-auto px-4">
    <h1 class="text-6xl font-extrabold mb-4">
      Bienvenid@ a<br />
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-primary to-accent-dark">
        Geolocalizer
      </span>
    </h1>

    <p class="text-lg text-accent-dark/80 mb-12">
      Conectamos ubicaciones y personas, facilitando la exploración y el acceso
      a información en tiempo real. ¡Potenciamos tu experiencia de navegar con
      precisión y facilidad!
    </p>

    <div class="flex justify-center space-x-6">
      <Boton texto="Iniciar sesión" href="/login" />
      <Boton texto="Registrarse" href="/registro" />
    </div>
  </section>
</BaseLayout>
